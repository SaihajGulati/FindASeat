<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvBuildingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Building Description"
        android:layout_alignParentTop="true"
        android:padding="16dp" />

    <TextView
        android:id="@+id/tvSeatAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBuildingDescription"
        android:padding="16dp"
        android:text="Seats Available" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTimeSlots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSeatAvailability" />

    <TextView
        android:id="@+id/tvBuildingId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Building ID" />

</RelativeLayout>
